<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2D32"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/layoutTitle"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_gradient"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Calculator"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_corners"
        android:layout_below="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="100dp">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorWhite"
            android:text="30+250-10-100*2922"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/btnZero"
        android:background="@drawable/black_rounded_button"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="80dp" />
    <Button
        android:id="@+id/btnClear"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:background="@drawable/orange_rounded_button"
        android:textSize="30sp"
        android:layout_marginLeft="95dp"
        android:textColor="@color/colorWhite"
        android:text="c"
        android:textAllCaps="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />
    <Button
        android:layout_marginLeft="190dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_rounded_button"
        android:textSize="30sp"
        android:text="="
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/btnEquals"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />
    <Button
        android:background="@drawable/white_rounded_button"
        android:layout_marginLeft="290dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:text="+"
        android:layout_marginBottom="20dp"
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />
    <Button
        android:text="1"
        android:layout_above="@+id/btnZero"
        style="@style/TextStyle"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="10dp"
        android:background="@drawable/black_rounded_button"
        android:id="@+id/btnOne"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />
    <Button
        android:text="2"
        style="@style/TextStyle"
        android:layout_above="@+id/btnClear"
        android:layout_marginLeft="95dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/black_rounded_button"
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />
    <Button
        android:layout_above="@+id/btnEquals"
        android:layout_marginLeft="190dp"
        android:text="3"
        style="@style/TextStyle"
        android:background="@drawable/black_rounded_button"
        android:textColor="@color/colorWhite"
        android:id="@+id/btnThree"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />
    <Button
        android:background="@drawable/white_rounded_button"
        android:textColor="@color/colorBlack"
        android:text="-"
        style="@style/TextStyle"
        android:id="@+id/btnSub"
        android:layout_above="@id/btnAdd"
        android:layout_marginLeft="290dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />
    <Button
        android:layout_above="@+id/btnOne"
        android:text="4"
        android:textColor="@color/colorWhite"
        android:background="@drawable/black_rounded_button"
        android:id="@+id/btnFour"
        style="@style/TextStyle"></Button>
    <Button
        android:layout_above="@id/btnTwo"
        android:textColor="@color/colorWhite"
        android:background="@drawable/black_rounded_button"
        android:text="5"
        style="@style/TextStyle"
        android:id="@+id/btnFive"
        android:layout_marginLeft="95dp"></Button>
    <Button
        android:layout_above="@id/btnThree"
        android:textColor="@color/colorWhite"
        android:background="@drawable/black_rounded_button"
        style="@style/TextStyle"
        android:text="6"
        android:layout_marginLeft="195dp"
        android:id="@+id/btnSix"></Button>
    <Button
        android:id="@+id/btnMul"
        android:layout_above="@id/btnSub"
        style="@style/TextStyle"
        android:background="@drawable/white_rounded_button"
        android:text="X"
        android:layout_marginLeft="290dp"
        />
    <Button
        android:text="7"
        android:layout_above="@id/btnFour"
        android:textColor="@color/colorWhite"
        android:background="@drawable/black_rounded_button"
        style="@style/TextStyle"
        android:id="@+id/btnSeven"/>
    <Button
        android:textColor="@color/colorWhite"
        android:background="@drawable/black_rounded_button"
        style="@style/TextStyle"
        android:text="8"
        android:layout_above="@id/btnFive"
        android:layout_marginLeft="95dp"
        />
    <Button
        android:textColor="@color/colorWhite"
        android:background="@drawable/black_rounded_button"
        style="@style/TextStyle"
        android:text="9"
        android:layout_above="@id/btnSix"
        android:layout_marginLeft="195dp"
        android:id="@+id/btnNine"
        />
    <Button
        android:text="/"
        android:layout_above="@+id/btnMul"
        android:layout_marginLeft="290dp"
        style="@style/TextStyle"
        android:background="@drawable/white_rounded_button"
        />
</RelativeLayout>